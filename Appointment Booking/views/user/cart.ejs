<% layout('./layout/boilerplate') %>

<h2>Saved</h2>

<div class="row"style="padding:50px 0px">
    <% for (let product of products){   %>
      <div class="col-lg-3 mb-3 ">
       <div class="card shadow-lg mx-auto" style="width: 18rem;">
          <img src="<%=product.img%>" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%=product.name%></h5>
            <p class="card-text"><%=product.desc%></p>
            <h3 class="card-text">Price: Rs.<%=product.price%></h3>
            <a href="/doctors/<%=product.id%>" class="btn btn-primary">Show Doctor</a>
            <br><br>
            <form action="/doctors/saved/<%=product.id%>?_method=delete" method="post"><button class="btn btn-danger">Remove from Saved</button></form>
          </div>
        </div> 
      </div>
        <%}%>
</div>
  
    
  
  